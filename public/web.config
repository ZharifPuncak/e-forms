<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <handlers>
        <add name="PUTHandler" path="*" verb="PUT" modules="IsapiModule" resourceType="Unspecified" requireAccess="Script" />
     </handlers>
      <rules>
          <rule name="Static Files" stopProcessing="true">
            <match url="^(.*/)?(.*\.(js|mjs|jsx|css|json|map|png|jpg|jpeg|gif|woff|woff2|ttf|eot|svg|ico))$" />
            <action type="None" />
        </rule>

        <!-- Remove trailing slash from URLs -->
        <!-- <rule name="Remove Trailing Slash" stopProcessing="true">
          <match url="^(.*)/$" ignoreCase="false" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
          </conditions>
          <action type="Redirect" redirectType="Permanent" url="/{R:1}" />
        </rule> -->

        <!-- Allow API requests to be handled by Laravel -->
        <rule name="API Requests" stopProcessing="true">
          <match url="^api/(.*)$" ignoreCase="false" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.php?/{R:1}" appendQueryString="true" />
        </rule>

        <!-- Handle all other requests (React SPA + Laravel) -->
        <rule name="React SPA + Laravel Routing" stopProcessing="true">
          <match url="^" ignoreCase="false" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.php" />
        </rule>

        <!-- Redirect HTTPS  -->
        <rule name="HTTPS Redirect" stopProcessing="true">
            <match url=".*" />
            <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                <add input="{HTTPS}" pattern="^OFF$" />
            </conditions>
            <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" />
        </rule>

        <!-- Redirect IP to Hostname
          <rule name="IP to Hostname" enabled="true" patternSyntax="Wildcard" stopProcessing="false">
            <match url="*" />
            <conditions>
                <add input="{HTTP_HOST}" pattern="10.16.1.151" />
                <add input="{REQUEST_URI}" pattern="^/e-forms(.*)" />
            </conditions>
            <action type="Redirect" url="https://eforms.puncakniaga.com.my/e-forms/{R:0}" redirectType="Permanent" />
        </rule> -->
      </rules>
    </rewrite>

    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="100000000" />
      </requestFiltering>
    </security>
    <handlers>
          <remove name="FastCGI" />
          <remove name="php-8.1.10" />
          <add name="php-8.2.27" path="*.php" verb="GET,HEAD,POST" modules="FastCgiModule" scriptProcessor="C:\php-8.2.27\php-cgi.exe" resourceType="Either" requireAccess="Script" />
      </handlers>

  </system.webServer>
</configuration>